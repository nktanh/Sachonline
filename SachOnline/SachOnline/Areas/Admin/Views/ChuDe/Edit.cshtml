@model SachOnline.Models.CHUDE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CHUDE</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
            <label class="control-label col-md-2">Mã chủ đề:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaCD" value="@Model.MaCD"
                       required />
            </div>
        </div>
                <div class="form-group">
            <label class="control-label col-md-2">Tên chủ đề:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenChuDe" value="@Model.TenChuDe"
                       required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại trang quản lý chủ đề", "Index")
</div>
