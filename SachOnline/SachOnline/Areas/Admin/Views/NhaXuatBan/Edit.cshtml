@model SachOnline.Models.NHAXUATBAN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thông tin nhà xuất bản</h2>

@using (Html.BeginForm("Edit", "NhaXuatBan", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Tên NXB:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaNXB" value="@Model.MaNXB"
                       readonly />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên NXB:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenChuDe" value="@Model.TenNXB"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDiaChi" value="@Model.DiaChi"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Số điện thoại:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDienThoai" value="@Model.DienThoai"
                       required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu thông tin" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ NXB", "Index")
</div>
