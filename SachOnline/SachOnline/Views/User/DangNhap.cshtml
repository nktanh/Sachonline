
@{
    ViewBag.Title = "DangNhap";
}

<style type="text/css">
    td {
        height: 40px;
    }
    .ak{
        text-align:center
    }
</style>
<div style="font-size: 20px">
    <br />
    <br />
    <br />
    <h2>ĐĂNG NHẬP</h2>

    <h2 style="color:red; text-align:left;">@ViewBag.ThongBao</h2>
    <table align="center">
        @using (Html.BeginForm("DangNhap", "User"))
        {
            @Html.ValidationSummary(true)
            <tr>
                <td>Tên đăng nhập: </td>
                <td>
                    @Html.TextBox("TenDN") @ViewData["Err1"]
                </td>
            </tr>
            <tr>
                <td>Mật khẩu: </td>
                <td>
                    @Html.Password("MatKhau")@ViewBag.Err2

                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Đăng nhập" />
                </td>
            </tr>

        }
    </table>
</div>

